{
  "name": "jrm-next-template",
  "author": "JEREMY",
  "description": "A template for creating a production-ready fullstack Next.js application (Maybe...)",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://github.com/pp3times/scalable-nextjs-template",
  "engines": {
    "node": ">=18.18.0",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm",
    "pnpm": ">=8.7.6"
  },
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "pnpm prettier && pnpm lint --fix"
  },
  "dependencies": {
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "autoprefixer": "latest",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "postcss": "latest",
    "prettier": "^3.0.3",
    "tailwindcss": "latest",
    "typescript": "latest"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "lint --fix",
      "prettier --config ./.prettierrc --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
